<h1>Create and Devour!</h1>

<h2>Burgers to Devour</h2>
	{{#each burgers}}
	  {{#unless this.devoured}}
	    <li>
	    	{{this.burger_name}}
			
			<form action="/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="true">
				<button type="submit">Devour!</button>
			</form>
	    </li>
	  {{/unless}}
	{{/each}}  

<h2>Devoured Burgers</h2>
	{{#each burgers}}
	  {{#if this.devoured}}
	  	<li>
	  		{{this.burger_name}}
	  	</li>
	  {{/if}}
	{{/each}}  

<h2>Create a Burger</h2>
	<form class="create-update-form" action="/" method="POST">
		<div class="form-group">
			<label for="burg">Burger Name: </label>
			<input type="text" id="burg" name="burger_name">
		</div>
		<button type="submit">Add Burger</button>
	</form>
